BoxLayoutExample:

<BoxLayoutExample>:
    orientation: "vertical"

    Button:
        text: "B-1"

        # size_hint: width, height
        size_hint: .8, .5

        # x, center_x, right
        # y, center_y, top
        pos_hint: { "x": .1 }

    Button:
        text: "B-2"
        size_hint: .8, .5

    Button:
        text: "B-3"
        size_hint: .8, .5

    BoxLayout:
        spacing: "10dp"
        orientation: "horizontal"

        Button:
            text: "B-1"

        Button:
            text: "B-2"

        Button:
            text: "B-3"

        Button:
            text: "B-4"

<MainWidget>:
    Button:
        text: "Hello"
        size: "400dp", "200dp"
        pos: "100dp", "200dp"
        color: 0, 0, 1, 1

    Label:
        text: "Hello 2"
        size: "400dp", "200dp"
        pos: "200dp", "300dp"
        color: 1, 0, 0, 1
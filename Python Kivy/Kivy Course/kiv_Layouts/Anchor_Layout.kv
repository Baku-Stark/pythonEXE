AnchorLayoutExample:

<AnchorLayoutExample>:
    # [anchor_x]: right, left, center
    anchor_x: "right"

    # [anchor_y]: bottom, top, center
    anchor_y: 'top'

    Button:
        text: "B-1"

        # size_hint: width, height
        size_hint: .1, .1


<MainWidget>:
    Button:
        text: "Hello"
        size: "400dp", "200dp"
        pos: "100dp", "200dp"
        color: 0, 0, 1, 1

    Label:
        text: "Hello 2"
        size: "400dp", "200dp"
        pos: "200dp", "300dp"
        color: 1, 0, 0, 1